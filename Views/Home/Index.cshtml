@model List<DoAnLTWEB.Models.KhuyenMai>
@{
    ViewBag.Title = "Trang chủ | Shop của Trung";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="row">
    <img src="~/Img/bg-home.jpg"/>
</div>
<div class="row">
    <h1 style="text-align:center;margin-top:30px">KHUYẾN MÃI</h1>
    <div class="row row-cols-1 row-cols-md-5 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 card-img">
                        <a href="/Collection/Detail/@item.SanPham.Id">
                            <img class="card-img" src="@item.SanPham.HinhAnh" height="300" />
                        </a>
                        <div class="card-body row" style="height:100px">
                            <h5 class="card-title">@item.SanPham.Ten</h5>  
                        </div>
                        <div class="card-body">
                            <a class="card-text" style="font-size:20px;color:black"> <del>@item.SanPham.Gia ₫</del> </a>
                            <a class="card-text" style="font-size:20px;color:red"> @item.GiaKM ₫</a>

                        </div>
                    </div>
                </div>
            }
    </div>
</div>
    <nav style="margin-top:30px">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="/Home/Index?page=1">Đầu</a>
            </li>
            
            @for (int i = 0; i < ViewBag.TotalPage; i++)
            {
                <li class="page-item"><a class="page-link" href="/Home/Index?page=@(i+1)">@(i+1)</a></li>
                
            }
            <li class="page-item">
                <a class="page-link" href="/Home/Index?page=@ViewBag.End">Cuối</a>
            </li>

        </ul>
    </nav>
    


