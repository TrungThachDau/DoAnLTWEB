<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <link href="~/Mdb5/css/mdb.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" />
    <script src="~/mdb5/js/mdb.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,1,0" />
    <link href="~/Styles/StyleSheet1.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.1.js"></script>
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row align-items-end bg-light" style="height:70px;padding-bottom:100px">
            <div class="col-md-2">
               <h1><a href="/Home/Index">TRUNGSHOP</a></h1>
            </div>
            <div class="col-md-2">
                Giao hàng tận nơi
                <p>Nội thành Sài Gòn trong ngày</p>
            </div>
            <div class="col-md-2">
                1 đổi 1 nếu lỗi
                <p>Trong vòng 7 ngày</p>
            </div>
            <div class="col-md-2">
                Hotline mua hàng
                <p>0909321332</p>
            </div>
            <div class="col-md-2 mx-auto" style="margin:auto">

                @{
                    if (Session["username"] != null)
                    {
                        var user = HttpContext.Current.Session["username"];
                        @user
                        <a href="/Account/Logout">Đăng xuất</a>
                    }
                    else

                    {
                        <span class="material-symbols-outlined">
                            account_circle
                        </span>
                        <a href="/Account/Login/">Đăng nhập/ Đăng ký</a>
                        <br />
                        <a>Tài khoản của tôi</a>
                    }


                }
            </div>
            <div class="col-md-2 mx-auto" style="margin:auto;text-decoration:none">
                <span class="material-symbols-outlined">
                    local_mall
                </span>
                <a href="~/Cart/" style="text-decoration:none;color:black">
                    @using DoAnLTWEB.Models;
                    @{
                        var mylist = (List<GioHang>)Session["cart"];
                    }
                    @if (mylist == null)
                    {
                        <p>Giỏ hàng</p>
                    }
                    else
                    {
                        <p>
                            Giỏ hàng(@{ List<GioHang> cart1 = (List<GioHang>)Session["cart"];
                                int sl = cart1.Count; }@sl)
                        </p>
                    }
                </a>
            </div>
        </div>
        <div class="row" style="height:50px;padding-bottom:65px">
            <div class=" align-items-center">
                <nav class="navbar navbar-expand-lg">
                    <a class="navbar-brand" href="#">Navbar</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-item nav-link active" href="/Home/Index">Trang chủ <span class="sr-only"></span></a>
                            <a class="nav-item nav-link" href="/Collection/">Sản phẩm</a>
                            <a class="nav-item nav-link" href="Home/About">Giới thiệu</a>
                            <a class="nav-item nav-link" href="/Account/Manage">Tài khoản</a>

                            @*<a class="nav-item nav-link disabled" href="#">Disabled</a>*@
                        </div>
                    </div>
                    <form class="form-inline" style="display:flex;margin-left:400px" action="/Collection/Index/">
                        <input class="form-control mr-sm-2" type="search" id="search" name="search" placeholder="Tìm kiếm sản phẩm" aria-label="Search" style="margin-right:5px">
                        <button class="btn btn-outline-success" type="submit" value="Tìm kiếm"><span class="material-symbols-outlined">search</span></button>
                    </form>
                    <form class="form-inline">
                    </form>
                </nav>
            </div>
            @*<div class="col-md-6">
                <nav class="navbar justify-content-between" style="text-align:right">
                    
                    
                </nav>
            </div>*@
        </div>
        <div>
            @RenderBody()
        </div>
        <div>
            <div class="row bg-light" style="min-height:70px;display:flex;padding:15px">

                <div>
                    <span class="material-symbols-outlined">
                        call
                    </span>
                    <a>Hỗ Trợ /Mua hàng: </a><a style="color:red">093231xxxx</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h5>Giới thiệu</h5>
            </div>
            <div class="col-md-3">
                <h5>Liên hệ</h5>
                <a>Sài Gòn</a>
                <br />
                <a>0438433432</a>
                <br />
                <a>qtrung1702@outlook.com</a>
            </div>
            <div class="col-md-3">
                <h5>Liên kết</h5>
                
            </div>
            <div class="col-md-3">

                <h5>Bản đồ</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d7838.119425074872!2d106.62855130000003!3d10.8067387!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1671690592435!5m2!1svi!2s" width="300" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
        <div class="row align-items-center bg-light" style="text-align:center;height:100px">
            <a style="text-align:center">Powered By 2001206954</a>
        </div>
    </div>
    
</body>
</html>
