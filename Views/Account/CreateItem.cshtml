@{
    ViewBag.Title = "Thêm | Trang quản trị";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h2>Thêm sản phẩm mới</h2>
<form action="/Account/CreateItem" method="post">
    <div class="row">
        <div class="col-md-3">
            <label for="Id">ID</label>
            <input type="number" class="form-control" id="Id" name="Id" placeholder="Mã" />
        </div>
        <div class="col-md-3">
            <label for="Ten">Tên sản phẩm</label>
            <input type="text" class="form-control" id="Ten" name="Ten" placeholder="Tên sản phẩm" />
        </div>
        <div class="col-md-3">
            <label for="Gia">Giá</label>
            <input type="text" class="form-control" id="Gia" name="Gia" placeholder="Giá" />
        </div>
        <div class="col-md-3">
            <label for="ThongTin">Thông in sản phẩm</label>
            <input type="text" class="form-control" id="ThongTin" name="ThongTin" placeholder="Thông tin" />
        </div>
        <div class="col-md-3">
            <label for="LoaiSP_ID">Loại sản phẩm</label>
            <input type="number" class="form-control" id="LoaiSP_ID" name="LoaiSP_ID" placeholder="Loại sản phẩm" />
        </div>
        <div class="col-md-3">
            <label for="HinhAnh">HinhAnh</label>
            <input type="text" class="form-control" id="Depid" name="Depid" placeholder="Department ID" />
        </div>
        <div class="col-md-3">
            <label for="LuotMua">Lượt mua</label>
            <input type="number" class="form-control" id="LuotMua" name="LuotMua" placeholder="Lượt mua" />
        </div>
        <div class="col-md-3">
            <label for="Kieu">Kiểu sản phẩn</label>
            <input type="text" class="form-control" id=Kieu" name="Kieu" placeholder="Kiểu sản phẩm" />
        </div>
    </div>
    <button type="submit" class="btn btn-success">Thêm</button>
</form>
