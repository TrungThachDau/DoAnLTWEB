
@{
    ViewBag.Title = "Đăng nhập | Shop của Trung";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@ViewBag.Error
<div class="row" style="padding-left:500px;padding-right:500px;padding-top:70px;">
    <h3 style="text-align:center;margin-bottom:30px">Đăng nhập</h3>
    <form action="/Account/Login/" method="post" style="margin-bottom:30px">

        <!-- Email input -->
        <div class="form-outline mb-4">
            <input type="text" id="Username" name="Username" class="form-control" />
            <label class="form-label" for="form2Example1">Tên người dùng</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" id="Password" name="Password" class="form-control" />
            <label class="form-label" for="Password">Mật khẩu</label>
        </div>
        
        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                    <label class="form-check-label" for="form2Example31"> Ghi nhớ đăng nhập </label>
                </div>
            </div>

            <div class="col">
                <!-- Simple link -->
                <a href="#!">Không nhớ mật khẩu à?</a>
            </div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Đăng nhập</button>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Không phải thành viên? <a href="/Account/Register">Đăng ký ngay</a></p>
            <p>Hoặc đăng nhập với</p>
            <button type="button" class="btn btn-link btn-floating mx-1">
                <img src="~/Img/facebook.svg" />
            </button>

            <button type="button" class="btn btn-link btn-floating mx-1">
                <img src="~/Img/google.svg" />

            </button>

            <button type="button" class="btn btn-link btn-floating mx-1">
                <img src="~/Img/apple.png" />

            </button>

            <button type="button" class="btn btn-link btn-floating mx-1">

                <img src="~/Img/instagram.svg" />
            </button>
        </div>
    </form>
</div>

